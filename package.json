        "eslint": "^9.11.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-vue": "^9.28.0",
        "globals": "^15.12.0",
        "husky": "^8.0.0",
        "laravel-mix": "^6.0.41",
